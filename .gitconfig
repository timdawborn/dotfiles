[color]
  diff = auto
  status = auto
  branch = auto

[alias]
  st = status
  co = checkout
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
  pushu = !git push -u origin `git symbolic-ref --short HEAD`
  undo = reset --soft HEAD^

[merge]
  tool = vimdiff

[push]
  default = simple

[diff]
  algorithm = patience

[commit]
  gpgsign = true
